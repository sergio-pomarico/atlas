{
  "extends": "@atlas/ts-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@api/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./types/**/*"]
}
